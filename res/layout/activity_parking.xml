<RelativeLayout xmlns:tools="http://schemas.android.com/tool"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools1="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Parking"
    tools1:ignore="UselessParent" >

    <TextView
        android:id="@+id/textViewSelectLot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:text="@string/title_parking_selection"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#A4C739" />

    <ImageView
        android:id="@+id/parkingMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewSelectLot"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textViewSelectLot"
        android:adjustViewBounds="true"
        android:clickable="true"
        android:contentDescription="@string/parking_map"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:src="@drawable/parking_map" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/parkingMap" >

        <Button
            android:id="@+id/buttonYellow"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_margin="5dp"
            android:background="#488214"
            android:gravity="center"
            android:onClick="onButtonClick"
            android:text="@string/yellow_lot"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/buttonRed"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/buttonYellow"
            android:layout_margin="5dp"
            android:background="#488214"
            android:gravity="center"
            android:onClick="onButtonClick"
            android:text="@string/red_lot"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonPink"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/buttonRed"
            android:layout_margin="5dp"
            android:background="#488214"
            android:gravity="center"
            android:onClick="onButtonClick"
            android:text="@string/pink_lot"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonPurple"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/buttonPink"
            android:layout_margin="5dp"
            android:background="#488214"
            android:gravity="center"
            android:onClick="onButtonClick"
            android:text="@string/purple_lot"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonOrange"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            android:background="#488214"
            android:gravity="center"
            android:onClick="onButtonClick"
            android:text="@string/orange_lot"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonGreen"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/buttonOrange"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            android:background="#488214"
            android:gravity="center"
            android:onClick="onButtonClick"
            android:text="@string/green_lot"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonWhite"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/buttonGreen"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            android:background="#488214"
            android:gravity="center"
            android:onClick="onButtonClick"
            android:text="@string/white_lot"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonBlue"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignParentCenter="true"
            android:layout_below="@id/buttonWhite"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            android:layout_marginLeft="14dp"
            android:background="#488214"
            android:gravity="center"
            android:onClick="onButtonClick"
            android:text="@string/blue_lot"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonGold"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/buttonBlack"
            android:layout_margin="5dp"
            android:background="#488214"
            android:gravity="center"
            android:onClick="onButtonClick"
            android:text="@string/gold_lot"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonSilver"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/buttonGold"
            android:layout_margin="5dp"
            android:background="#488214"
            android:gravity="center"
            android:onClick="onButtonClick"
            android:text="@string/silver_lot"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonBlack"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            android:background="#488214"
            android:gravity="center"
            android:onClick="onButtonClick"
            android:text="@string/black_lot"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold" />
    </RelativeLayout>

